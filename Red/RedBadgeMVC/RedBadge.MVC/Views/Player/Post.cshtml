@model PlayerCreate


@{
    ViewData["Title"]= "Create Player";
}

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Post">
            <div class="form=group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name"class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form=group">
                <label asp-for="TeamId" class="control-label"></label>
                <input asp-for="TeamId"class="form-control"/>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form=group">
                <label asp-for="Championships" class="control-label"></label>
                <input asp-for="Championships"class="form-control"/>
                <span asp-validation-for="Championships" class="text-danger"></span>
            </div>
            <div class="form=group">
                <input type="submit" value="Create" class="btn btn-primary"
            </div>
        </form>
    </div>
</div>
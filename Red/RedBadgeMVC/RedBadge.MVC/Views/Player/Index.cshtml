@model IEnumerable<PlayerListItem>



@{
    ViewData["Title"]="Players";
}

<div class="create">
@Html.ActionLink("Create Player","Post","Player")
</div>
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.Id</td>
                <td>@player.Name</td>
                <td>
                  @Html.ActionLink("Edit","Edit","Player",new {id=player.Id}) |
                  @Html.ActionLink("Details","Details","Player",new {id=player.Id}) |
                  @Html.ActionLink("Delete","Delete","Player",new {id=player.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">No Players Available.</p>
}
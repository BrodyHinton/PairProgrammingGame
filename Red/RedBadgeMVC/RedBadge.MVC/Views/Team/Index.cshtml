@model IEnumerable<TeamListItem>



@{
    ViewData["Title"]="Teams";
}

<div class="create">
@Html.ActionLink("Create Team","Post","Team")
</div>
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td>
                  @Html.ActionLink("Edit","Edit","Team",new {id=team.Id}) |
                  @Html.ActionLink("Details","Details","Team",new {id=team.Id}) |
                  @Html.ActionLink("Delete","Delete","Team",new {id=team.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">No Teams Available.</p>
}
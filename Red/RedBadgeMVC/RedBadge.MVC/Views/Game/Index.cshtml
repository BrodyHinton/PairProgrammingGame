@model IEnumerable<GameListItem>



@{
    ViewData["Title"]="Games";
}

<div class=create>
@Html.ActionLink("Create Game","Post","Game")
</div>
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Home Team</th>
            <th>Away Team</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Date</td>
                <td>@game.HomeTeamId</td>
                <td>@game.AwayTeamId</td>
                <td>
                  @Html.ActionLink("Edit","Edit","Game",new {id=game.Id}) |
                  @Html.ActionLink("Details","Details","Game",new {id=game.Id}) |
                  @Html.ActionLink("Delete","Delete","Game",new {id=game.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">No Games Available.</p>
}
@model IEnumerable<AwayTeamListItem>



@{
    ViewData["Title"]="Away Teams";
}

<div class="create">
@Html.ActionLink("Create Away Team","Post","AwayTeam")
</div>
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var awayteam in Model)
        {
            <tr>
                <td>@awayteam.Id</td>
                <td>@awayteam.Name</td>
                <td>
                  @Html.ActionLink("Edit","Edit","AwayTeam",new {id=awayteam.Id}) |
                  @Html.ActionLink("Details","Details","AwayTeam",new {id=awayteam.Id}) |
                  @Html.ActionLink("Delete","Delete","AwayTeam",new {id=awayteam.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">No Away Teams Available.</p>
}
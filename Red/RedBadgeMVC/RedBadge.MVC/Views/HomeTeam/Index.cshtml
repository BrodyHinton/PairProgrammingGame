@model IEnumerable<HomeTeamListItem>



@{
    ViewData["Title"]="Home Teams";
}

<div class="create">
@Html.ActionLink("Create Home Team","Post","HomeTeam")
</div>
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hometeam in Model)
        {
            <tr>
                <td>@hometeam.Id</td>
                <td>@hometeam.Name</td>
                <td>
                  @Html.ActionLink("Edit","Edit","HomeTeam",new {id=hometeam.Id}) |
                  @Html.ActionLink("Details","Details","HomeTeam",new {id=hometeam.Id}) |
                  @Html.ActionLink("Delete","Delete","HomeTeam",new {id=hometeam.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">No Home Teams Available.</p>
}
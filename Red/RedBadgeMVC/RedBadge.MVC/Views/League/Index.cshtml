@model IEnumerable<LeagueListItem>



@{
    ViewData["Title"]="Leagues";
}

<div class="create">
@Html.ActionLink("Create League","Post","League")
</div>
@if(Model.Count() >0)
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var league in Model)
        {
            <tr>
                <td>@league.Id</td>
                <td>@league.Name</td>
                <td>
                  @Html.ActionLink("Edit","Edit","League",new {id=league.Id}) |
                  @Html.ActionLink("Details","Details","League",new {id=league.Id}) |
                  @Html.ActionLink("Delete","Delete","League",new {id=league.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-danger">No Leagues Available.</p>
}